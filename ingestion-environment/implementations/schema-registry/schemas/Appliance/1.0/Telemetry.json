{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "appliance_telemetry",
    "title": "Appliance Telemetry (Unified)",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "voltage": {
            "type": "number"
        },
        "current": {
            "type": "number"
        },
        "activePowerW": {
            "type": "number"
        },
        "reactivePowerVar": {
            "type": "number"
        },
        "apparentPowerVA": {
            "type": "number"
        },
        "powerFactorPct": {
            "type": "number"
        },
        "frequencyHz": {
            "type": "number"
        }
    },
    "required": [
        "voltage",
        "current",
        "activePowerW",
        "reactivePowerVar",
        "apparentPowerVA",
        "powerFactorPct",
        "frequencyHz"
    ]
}